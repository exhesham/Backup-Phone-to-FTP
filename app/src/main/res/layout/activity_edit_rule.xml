<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"       android:background="#ffffff">

    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Extension"
        android:id="@+id/extension"
        android:textColor="#000000"
        android:lines="1" />
    <EditText android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Folder Name"
        android:id="@+id/folder_name"
        android:textColor="#000000"
        android:lines="1" />

    <CheckBox
        android:text="Ignore other extensions"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/ignore_other_extensions" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button android:id="@+id/ok" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:text="Submit"  android:layout_weight="1"
            />
        <Button android:id="@+id/cancel" android:layout_height="wrap_content"
            android:layout_width="wrap_content"  android:layout_weight="1"
            android:text="@android:string/cancel" />
    </LinearLayout>
</LinearLayout>